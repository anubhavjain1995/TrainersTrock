<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white
        </item>     <!--calendar background-->
    </style>

    <style name="RadioButtonTextLabel" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/graycolor4</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
</resources>
